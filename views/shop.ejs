<%- include('./partials/header') %>

<% if (success.length > 0) { %>
<div class="fixed top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-green-500 text-white shadow-lg z-50">
  <span><%= success %></span>
</div>
<% } %>

<div class="w-full min-h-screen bg-gray-50 flex px-20 py-10">
  <!-- Sidebar -->
  <div class="w-1/4 pr-8">
    <div class="bg-white rounded-lg p-6 shadow-sm">
      <div class="mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Sort by</h3>
        <form action="/shop">
          <select 
            name="sort" 
            id="sort"
            class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
            <option value="popular">Popular</option>
            <option value="new">Newest</option>
            <option value="price-asc">Price: Low to High</option>
            <option value="price-desc">Price: High to Low</option>
          </select>
        </form>
      </div>
      
      <div class="space-y-3">
        <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Categories</h4>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="/shop">New Collection</a>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="/shop">All Products</a>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="/shop">Discounted Products</a>
      </div>
      
      <div class="mt-8 space-y-3">
        <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Filter by</h4>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="#">Availability</a>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="#">Discount</a>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="w-3/4">
    <div class="mb-8">
      <h1 class="text-3xl font-light text-gray-900">Shop</h1>
      <p class="text-gray-600 mt-2">Discover our premium collection</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% products.forEach(function(product){ %>
      <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
        <div class="aspect-square bg-gray-100 flex items-center justify-center p-4">
          <img
            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
            alt="<%= product.name %>"
            class="max-w-full max-h-full object-contain"
          />
        </div>
        <div class="p-4">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-medium text-gray-900"><%= product.name %></h3>
              <p class="text-lg font-semibold text-gray-900 mt-1">â‚¹<%= product.price %></p>
            </div>
            <a
              href="/addtocart/<%= product._id %>"
              class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors"
            >
              <i class="ri-add-line text-sm"></i>
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>