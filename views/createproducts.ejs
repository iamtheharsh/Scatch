<%- include('./partials/header') %>

<% if(success.length > 0) { %>
<div class="fixed top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-green-500 text-white shadow-lg z-50">
  <span><%= success %></span>
</div>
<% } %>

<div class="w-full min-h-screen bg-gray-50 flex px-20 py-10">
  <!-- Sidebar -->
  <div class="w-1/4 pr-8">
    <div class="bg-white rounded-lg p-6 shadow-sm">
      <h2 class="text-lg font-medium text-gray-900 mb-6">Admin Panel</h2>
      <div class="space-y-3">
        <a class="block text-gray-700 hover:text-gray-900 transition-colors" href="/owners/admin">All Products</a>
        <a class="block text-gray-700 hover:text-gray-900 transition-colors font-medium" href="/products/create">Create New Product</a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="w-3/4">
    <div class="bg-white rounded-lg shadow-sm p-8">
      <h1 class="text-3xl font-light text-gray-900 mb-8">Create New Product</h1>
      
      <form action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-8">
        <!-- Product Details Section -->
        <div>
          <h2 class="text-xl font-medium text-gray-900 mb-6">Product Details</h2>
          
          <div class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Product Image</label>
              <input
                type="file"
                name="image"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                accept="image/*"
              />
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
                <input
                  name="name"
                  placeholder="Enter product name"
                  class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                  type="text"
                  required
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Product Price</label>
                <input
                  name="price"
                  placeholder="Enter price"
                  class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                  type="number"
                  required
                />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Discount Price</label>
              <input
                name="discount"
                placeholder="Enter discount amount"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                type="number"
              />
            </div>
          </div>
        </div>

        <!-- Panel Details Section -->
        <div>
          <h2 class="text-xl font-medium text-gray-900 mb-6">Panel Details</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Background Color</label>
              <input
                name="bgcolor"
                placeholder="e.g., #ffffff"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                type="text"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Panel Color</label>
              <input
                name="panelcolor"
                placeholder="e.g., #f0f0f0"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                type="text"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Text Color</label>
              <input
                name="textcolor"
                placeholder="e.g., #000000"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
                type="text"
              />
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-6">
          <button
            type="submit"
            class="px-8 py-3 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 transition-colors"
          >
            Create New Product
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>